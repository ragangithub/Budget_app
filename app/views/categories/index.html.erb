<%= render 'shared/navbar', title: "#{@categories.name}" ,back_link: false %>


<div class = "groups_container">
  <% @categories.each do |category| %>
    <div class =  "group">
      <div class = "details_container">
      <img src="<%= category.icon %>" alt="group Icon" class="group-icon">
      <div class="text">
        <h2><%= category.name %></h2>
        <h4>$<%= category.total_amount %></h4>
        </div>
      </div>
      <p class="date"><%= "#{category.created_at.day} #{category.created_at.strftime("%b")} #{category.created_at.year}" %></p>
      <ul class = "group_actions">
      <li><button><%= link_to "View Transactions", category_payments_path(category), class: 'button' %></button></li>
      <li><%= button_to "Remove", category_path(category), data: {
      confirm: "Are you sure you want to delete: #{category.name}?",
    }, method: :delete, class: 'remove-btn', id: "remove_btn-#{category.id}" %></li>
    </ul>
    </div>
  <% end %>
</div>

<div class="group_btn">
  <%= link_to "Add New Category", new_category_path, class: 'add-btn' %>
</div>